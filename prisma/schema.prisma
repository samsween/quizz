generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  password     String
  createdAt DateTime @default(now())
}


model Quiz {
  id          String      @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime    @default(now())
  questions   Question[]  // ‚Üê one quiz has many questions
}

model Question {
  id         String   @id @default(cuid())
  question   String
  answers    String[] // multiple choice options
  correct    String[] // one or more correct answers
  img        String?
  quiz       Quiz?    @relation(fields: [quizId], references: [id], onDelete: Cascade)
  quizId     String?  // foreign key to Quiz
}
